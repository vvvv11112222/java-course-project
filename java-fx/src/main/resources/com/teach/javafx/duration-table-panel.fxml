<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ComboBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: #f5f7fa;" fx:controller="com.teach.javafx.controller.DurationTableController">
    <top>
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e1e8ed; -fx-border-width: 0 0 1 0;">
            <!-- 紧凑标题区域 -->
            <HBox alignment="CENTER_LEFT" spacing="8">
                <children>
                    <Label text="⏱️" style="-fx-font-size: 20;"/>
                    <Label text="时长管理" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label text="管理志愿活动时长信息" style="-fx-font-size: 12; -fx-text-fill: #7f8c8d;"/>
                </children>
            </HBox>

            <!-- 紧凑查询/添加区域 -->
            <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-padding: 5 0;">
                <children>
                    <Label text="学生:" style="-fx-font-weight: bold; -fx-text-fill: #555; -fx-font-size: 13;" />
                    <ComboBox fx:id="studentComboBox" prefWidth="160" style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #ddd; -fx-padding: 6 8; -fx-font-size: 12;"/>
                    <Label text="志愿活动:" style="-fx-font-weight: bold; -fx-text-fill: #555; -fx-font-size: 13;" />
                    <ComboBox fx:id="volunteeringComboBox" prefWidth="160" style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #ddd; -fx-padding: 6 8; -fx-font-size: 12;"/>
                    <Button fx:id="queryButton" text="查询" onAction="#onQueryButtonClick"
                            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 6 15; -fx-cursor: hand; -fx-font-size: 12;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="addButton" text="添加记录" onAction="#onAddButtonClick"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 8 16; -fx-cursor: hand; -fx-font-size: 12;"/>
                    <Button fx:id="editButton" text="编辑记录" onAction="#onEditButtonClick"
                            style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 8 16; -fx-cursor: hand; -fx-font-size: 12;"/>
                    <Button fx:id="deleteButton" text="删除记录" onAction="#onDeleteButtonClick"
                            style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 8 16; -fx-cursor: hand; -fx-font-size: 12;"/>
                </children>
            </HBox>
        </VBox>
    </top>
    <center>
        <!-- 更大的数据表格区域 -->
        <TableView fx:id="dataTableView" style="-fx-background-color: white; -fx-border-color: #e1e8ed; -fx-border-width: 1; -fx-font-size: 13;">
            <columns>
                <TableColumn fx:id="studentNumColumn" prefWidth="120.0" text="学号" style="-fx-alignment: CENTER-LEFT;"/>
                <TableColumn fx:id="studentNameColumn" prefWidth="100.0" text="姓名" style="-fx-alignment: CENTER-LEFT;"/>
                <TableColumn fx:id="classNameColumn" prefWidth="150.0" text="班级" style="-fx-alignment: CENTER-LEFT;"/>
                <TableColumn fx:id="volunteeringNumColumn" prefWidth="120.0" text="活动编号" style="-fx-alignment: CENTER-LEFT;"/>
                <TableColumn fx:id="volunteeringNameColumn" prefWidth="200.0" text="活动名称" style="-fx-alignment: CENTER-LEFT;"/>
                <TableColumn fx:id="markColumn" prefWidth="100.0" text="时长(小时)" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="editColumn" prefWidth="140.0" text="操作" style="-fx-alignment: CENTER;"/>
            </columns>
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>
        </TableView>
    </center>
</BorderPane>
